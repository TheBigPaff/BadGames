<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">
    <TextView
            android:text="Really bad games!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="36sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold" android:textAlignment="center"
            android:textColor="#FF1300"/>
    <Button
            android:text="Get Higher Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getHigherNumberBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:onClick="playGame"/>
    <ImageButton
            android:layout_width="51dp"
            android:layout_height="48dp" app:srcCompat="@drawable/info_icon"
            android:id="@+id/getHigherNumberInfoBtn"
            android:scaleType="fitCenter" app:layout_constraintStart_toEndOf="@+id/getHigherNumberBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/getHigherNumberBtn" android:onClick="showInfo"/>
    <TextView
            android:text="Press the button with the higher number on, as many times as possible in 10 seconds."
            android:layout_width="298dp"
            android:layout_height="71dp"
            android:id="@+id/getHigherNumberInfoText" android:textSize="18sp"
            android:visibility="invisible" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
</androidx.constraintlayout.widget.ConstraintLayout>